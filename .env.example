# Solana Configuration
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_WS_URL=wss://api.mainnet-beta.solana.com
SOLANA_NETWORK=mainnet-beta  # Options: mainnet-beta, devnet, testnet

# Helius API (Free tier: 100k credits/month)
# Sign up at: https://www.helius.dev/
HELIUS_API_KEY=your_helius_api_key_here
USE_HELIUS=true

# KOLscan API (Optional - for automatic trader discovery)
# Get from: https://kolscan.io/
KOLSCAN_API_KEY=your_kolscan_api_key_here
KOLSCAN_API_URL=https://api.kolscan.com/v1

# Wallet Configuration (for real trading - leave empty for simulation)
WALLET_PRIVATE_KEY=
WALLET_PUBLIC_KEY=

# Trading Configuration (EUR-based)
INITIAL_BALANCE_EUR=20.0  # Starting balance in EUR
SOL_PRICE_EUR=200.0  # SOL price in EUR (updated dynamically)
MIN_TRADE_SIZE=0.01  # Minimum trade size in SOL
MAX_TRADE_SIZE=1.0   # Maximum trade size in SOL
MAX_POSITION_SIZE=0.3  # Max 30% of balance per position

# Risk Management & Fees
SLIPPAGE_BPS=100  # 1% slippage tolerance
PRIORITY_FEE_LAMPORTS=50000  # Priority fee for faster execution
BASE_NETWORK_FEE=0.000005  # Base Solana network fee in SOL
JUPITER_PLATFORM_FEE_BPS=25  # Jupiter platform fee (0.25%)

# Strategy Selection (1-5 or 'all')
ACTIVE_STRATEGY=2  # 1=Conservative, 2=Balanced, 3=Aggressive, 4=Scalper, 5=HODL

# Testing & Simulation
TEST_MODE=true  # Set to false for production trading
USE_DEVNET=false  # Use mainnet for realistic simulation
SIMULATE_TRADES=true  # Simulate trades with realistic fees

# Telegram Bot
ENABLE_TELEGRAM_NOTIFICATIONS=true
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Database
DATABASE_URL=sqlite+aiosqlite:///./copytrader.db

# Monitoring
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
TOP_WALLETS_COUNT=100
WALLET_REFRESH_INTERVAL=3600  # seconds
TX_CONFIRMATION_TIMEOUT=60  # seconds
MAX_RETRIES=3
PRICE_UPDATE_INTERVAL=1.0  # seconds
