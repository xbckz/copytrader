# Solana Configuration
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_WS_URL=wss://api.mainnet-beta.solana.com
SOLANA_NETWORK=mainnet-beta  # Options: mainnet-beta, devnet, testnet

# Wallet Configuration
WALLET_PRIVATE_KEY=your_base58_private_key_here
WALLET_PUBLIC_KEY=your_public_key_here

# KOLscan API (if available)
KOLSCAN_API_KEY=your_kolscan_api_key_here
KOLSCAN_API_URL=https://api.kolscan.com/v1

# Trading Configuration
INITIAL_BALANCE=100  # Starting balance in SOL
MIN_TRADE_SIZE=0.01  # Minimum trade size in SOL
MAX_TRADE_SIZE=1.0   # Maximum trade size in SOL
MAX_POSITION_SIZE=0.3  # Max 30% of balance per position

# Risk Management
SLIPPAGE_BPS=100  # 1% slippage tolerance
PRIORITY_FEE_LAMPORTS=50000  # Priority fee for faster execution

# Strategy Selection (1-5)
ACTIVE_STRATEGY=1  # Which strategy to use (or 'all' for running all)

# Testing Mode
TEST_MODE=true  # Set to false for production trading
USE_DEVNET=true  # Use devnet for testing
SIMULATE_TRADES=false  # Simulate without actual execution

# Monitoring
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
ENABLE_TELEGRAM_NOTIFICATIONS=false
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Database
DATABASE_URL=sqlite+aiosqlite:///./copytrader.db
